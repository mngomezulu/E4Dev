@using E4UsersMVCWebApp.Models
@model IEnumerable<UserModel>

<h2>@ViewBag.Title</h2>

@Html.ActionLink("Add User", "Create",null)
<a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Create">Create Users</a>

<table class="table table-bordered">  
        <thead>
        <tr> 
            <th>Image</th>
            <th>Id</th>  
            <th>FirstName</th>  
            <th>LastName</th>
            <th>DoB</th>
            <th>Cellphone</th>
            <th>Email</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)  
        {  
        <tr>
            <td>
                    @{
                        var imagePath = ViewBag.ImgDir + item.ImagePath;
                    }
                    <img src="@imagePath" alt="Image" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoB)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Cellphone)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Email)
            </td>
            <td> @Html.ActionLink("Edit", "Edit", new { Id = @item.Id })</td>
             <td>@Html.ActionLink("Delete", "Delete", new { Id = @item.Id })</td>
            </tr>
         }
         </tbody>
</table> 
