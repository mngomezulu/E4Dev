@using E4UsersMVCWebApp.Models
@model IEnumerable<UserModel>

<h2>@ViewBag.Title</h2>

@Html.ActionLink("Add User", "Create", null, new { @class="button .button1" })
<table class="table table-bordered">  
        <thead>
        <tr> 
            <th>Image</th>
            <th>Id</th>  
            <th>FirstName</th>  
            <th>LastName</th>
            <th>DoB</th>
            <th>Cellphone</th>
            <th>Email</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)  
        {  
        <tr>
            <td>
                    @{
                        var imagePath = ViewBag.ImgDir + item.ImagePath;
                    }
                    <img alt="" src="@imagePath" style="height:100px;width:100px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.ActionLink(item.FirstName, "Details", new { id = @item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cellphone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td> @Html.ActionLink("Edit", "Edit", new { id = @item.Id })</td>
             <td>@Html.ActionLink("Delete", "Delete", new { id = @item.Id })</td>
            </tr>
         }
         </tbody>
</table> 
